<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuButtonStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#009688</item>
        <item name="android:background">@drawable/menu_btn_back</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:background">@drawable/radio_back</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BackAndNextButtonStyle">
<!--        <item name="android:textAllCaps">false</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
<!--        <item name="android:background"></item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ResultTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChooseSubjectsButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">#009688</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>